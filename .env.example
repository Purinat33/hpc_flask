# ==== core secrets (REQUIRED in production) ====
FLASK_SECRET_KEY=
ADMIN_PASSWORD=

# ==== environment ====
APP_ENV=development    # development | production | staging

# ==== databases & files (absolute or relative paths) ====
BILLING_DB=./instance/billing.sqlite3
USERS_DB=./instance/users.sqlite3
FALLBACK_CSV=./instance/test.csv

# ==== demo users (development only) ====
SEED_DEMO_USERS=1


# ==== Auth throttling ====
AUTH_THROTTLE_MAX_FAILS=5
AUTH_THROTTLE_WINDOW_SEC=60
AUTH_THROTTLE_LOCK_SEC=300

# ==== Slurm REST (optional now) ====
SLURMRESTD_URL=
SLURMRESTD_TOKEN=
SLURMRESTD_BEARER=
SLURMRESTD_BASIC=
SLURMRESTD_API_VERSION=v0.0.39
SLURMRESTD_TIMEOUT=15
SLURMRESTD_TLS_VERIFY=true
SLURMRESTD_LIMIT=
